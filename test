<script>
$(document).ready(function () {

  // Add task
  $("#submit").click(function (event) {
    event.preventDefault();

    let task = $("#taskName").val();

    if (task.trim() === "") {
      alert("Please enter a task");
      return;
    }

    $("#itemList").append(`
      <div class="d-flex align-items-center gap-2 mb-2">
        <p class="task m-0 flex-grow-1 text-light">${task}</p>
        <button class="btn btn-warning delete">-</button>
        <button class="btn btn-success edit">+</button>
      </div>
    `);

    $("#taskName").val("");
  });

  // Clear all tasks
  $("#clearTask").click(function () {
    $("#itemList").empty();
  });

  // Delete single task (event delegation)
  $("#item").on("click", ".delete", function () {
    $(this).parent().remove();
  });

  // Edit task
  $("#item").on("click", ".edit", function () {
    let taskText = $(this).siblings("p");
    let updated = prompt("Edit task:", taskText.text());

    if (updated) {
      taskText.text(updated);
    }
  });

});
</script>

